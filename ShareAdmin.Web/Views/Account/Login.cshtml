<!-- PRE LOADER -->

<div class="preloader-main">
    <div class="sk-spinner sk-spinner-pulse"></div>
</div>

<!-- Navigation Section -->
<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">

        <div class="navbar-header">
            <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon icon-bar"></span>
                <span class="icon icon-bar"></span>
                <span class="icon icon-bar"></span>
            </button>
            <a href="@Url.Action("Main", "Main")" class="navbar-brand"><i class="fa fa-share-alt"></i> Share Admin</a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#home" class="smoothScroll"><i class="fa fa-home"></i> Accueil</a></li>
                <li><a href="#pricing" class="smoothScroll"><i class="fa fa-cart-arrow-down"></i> Modèles</a></li>
                <li><a href="@Url.Action("Login", "Account")"><i class="fa fa-user"></i> S'inscrire / Se connecter</a></li>
            </ul>
        </div>

    </div>
</div>

<!-- Home Section -->
<section id="home" class="main">
    <div class="overlay-main"></div>
    <div class="container">
        <div class="row">
            <div class="wow fadeInUp col-md-6 col-sm-5 col-xs-10 col-xs-offset-1 col-sm-offset-0" data-wow-delay="0.2s">
                <img src="@Url.Content("~/images/main/home-img.png")" class="img-responsive" alt="Accueil">
            </div>

            <div class="col-md-6 col-sm-7 col-xs-12">
                <div class="home-thumb">
                    <h1 class="wow fadeInUp" data-wow-delay="0.6s">Share Admin</h1>
                    <p class="wow fadeInUp" data-wow-delay="0.8s">La plateforme idéale pour trouver et fournir des travaux administratifs</p>
                    <a href="#pricing" class="wow fadeInUp section-btn btn smoothScroll" data-wow-delay="1s">En savoir plus...</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="pricing">
    <div class="container">
        <div class="row">

            <div class="col-md-12 col-sm-12">
                <div class="section-title">
                    <h1>Modèles</h1>
                    <hr>
                </div>
            </div>

            <div class="wow fadeInUp col-md-4 col-sm-4" data-wow-delay="0.4s">
                <div class="pricing-plan">
                    <div class="pricing-title">
                        <h3>Basique</h3>
                    </div>
                    <p>- Photocopies</p>
                    <p>- Classement</p>
                    <p>- Archivage</p>
                    <button class="btn btn-default section-btn"><a href="@Url.Action("Login", "Account")">S'inscrire</a></button>
                </div>
            </div>

            <div class="wow fadeInUp col-md-4 col-sm-4" data-wow-delay="0.6s">
                <div class="pricing-plan">
                    <div class="pricing-title">
                        <h3>Avancé</h3>
                    </div>
                    <p>- Prise de PV</p>
                    <p>- Retranscription</p>
                    <p>- Bureautique diverse</p>
                    <button class="btn btn-default section-btn">S'inscrire</button>
                </div>
            </div>

            <div class="wow fadeInUp col-md-4 col-sm-4" data-wow-delay="0.8s">
                <div class="pricing-plan">
                    <div class="pricing-title">
                        <h3>Expert</h3>
                    </div>
                    <p>- Comptabilité</p>
                    <p>- Bilan de fin d'année</p>
                    <p>- Site Web personnalisé</p>
                    <button class="btn btn-default section-btn">S'inscrire</button>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- Back top -->
<a href="#" class="go-top"><i class="fa fa-angle-up"></i></a>

